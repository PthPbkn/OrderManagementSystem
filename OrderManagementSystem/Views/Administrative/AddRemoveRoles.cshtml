@model List<OrderManagementSystem.Entity.ViewModels.AddRemoveRoleViewModel>

@{
    ViewData["Title"] = "AddRemoveRoles";
}

<h1>@ViewBag.UserName</h1>
<form asp-action="AddRemoveRoles" method="post">
    <input type="hidden" value="@ViewBag.UserId" name="UserId" />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().RoleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IsSelected)
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => @Model[i].RoleId)
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => @Model[i].RoleName)
                    </td>
                    <td>
                        <input asp-for="@Model[i].IsSelected" />
                    </td>

                </tr>
            }
        </tbody>
    </table>

    <input type="submit" class="btn btn-success" />

</form>